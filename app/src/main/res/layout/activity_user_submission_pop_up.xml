<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:background="@color/gray"
    android:padding="5dp"
    android:layout_gravity="center">
    <Button
        android:id="@+id/txtclose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:text="X"
        android:background="@color/black"
        android:textStyle="bold"
        android:layout_alignParentRight="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please onclude a description of the image, any text in the image, and a little info about why it's funny."
        android:textStyle="bold"
        android:textSize="12pt"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtclose"
        android:textAlignment="center"
        android:id="@+id/instr_text"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"/>


    <EditText
        android:id="@+id/user_input_box"
        android:layout_width="300dp"
        android:layout_height="150dp"

        android:layout_below="@+id/instr_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@color/white" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/user_input_box"
        android:textColor="@color/white"
        android:background="@color/black"/>

</RelativeLayout>